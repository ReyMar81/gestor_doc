# --- Configuración para Producción AWS EC2 ---

# IMPORTANTE: Cambiar esta clave por una generada con seguridad
SECRET_KEY='CAMBIAR-POR-UNA-CLAVE-SEGURA'

# Desactivar DEBUG en producción
DEBUG=False

# Permitir todos los hosts (o especificar tu dominio/IP)
# Usar * para permitir todos, o tu-dominio.com,tu-ip-publica
ALLOWED_HOSTS=*

# --- Configuración de la Base de Datos ---
DB_NAME=traductor_db
DB_USER=postgres
DB_PASSWORD=TU_PASSWORD_SEGURO
DB_HOST=localhost
DB_PORT=5432

# API Key de Gemini
GEMINI_API_KEY=TU_API_KEY_DE_GEMINI

# --- Configuración de CORS ---
# Permitir todos los orígenes (True) o especificar dominios específicos (False)
CORS_ALLOW_ALL_ORIGINS=True
# Si CORS_ALLOW_ALL_ORIGINS=False, especificar orígenes:
# CORS_ALLOWED_ORIGINS=https://tu-dominio.com,http://tu-ip-publica

# URL del frontend para redirecciones de email
FRONTEND_URL=http://tu-ip-publica-o-dominio

